<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import rafael.logistic.core.fx.iterationchart.*?>
<?import rafael.logistic.core.fx.mapchart.*?>

<BorderPane prefHeight="589.0" prefWidth="1220.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" valignment="BASELINE" vgrow="ALWAYS"/>
            </rowConstraints>
            <children>
                <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="0">
                    <children>
                        <Label fx:id="lblA" styleClass="title" text="α =">
                            <padding>
                                <Insets right="5.0"/>
                            </padding>
                        </Label>
                        <Spinner fx:id="spnA"/>
                    </children>
                </FlowPane>
                <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="1">
                    <children>
                        <Label fx:id="lblB" styleClass="title" text="β =">
                            <padding>
                                <Insets right="5.0"/>
                            </padding>
                        </Label>
                        <Spinner fx:id="spnB"/>
                    </children>
                </FlowPane>
                <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="2">
                    <children>
                        <Label fx:id="lblX0" styleClass="title" text="x₀ =">
                            <padding>
                                <Insets left="5.0"/>
                            </padding>
                        </Label>
                        <Spinner fx:id="spnX0"/>
                    </children>
                </FlowPane>
                <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="3">
                    <children>
                        <Label fx:id="lblY0" styleClass="title" text="y₀ =">
                            <padding>
                                <Insets left="5.0"/>
                            </padding>
                        </Label>
                        <Spinner fx:id="spnY0"/>
                    </children>
                </FlowPane>
                <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="4">
                    <children>
                        <Label fx:id="lblIterations" styleClass="title" text="Iterations =">
                            <padding>
                                <Insets right="5.0"/>
                            </padding>
                        </Label>
                        <Spinner fx:id="spnIterations"/>
                    </children>
                </FlowPane>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </GridPane>
    </top>
    <center>
        <FlowPane alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <MapChartBi fx:id="chart" animated="false" createSymbols="false" legendVisible="false">
                    <xAxis>
                        <NumberAxis autoRanging="false" lowerBound="-2.0" minorTickCount="10" side="BOTTOM"
                                    tickUnit="0.1" upperBound="2.0"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis autoRanging="false" lowerBound="-2.0" minorTickCount="10" side="LEFT" tickUnit="0.1"
                                    upperBound="2.0"/>
                    </yAxis>
                </MapChartBi>
            </children>
        </FlowPane>
    </center>
    <bottom>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <IterationChartBi animated="false" createSymbols="false" legendVisible="false" prefHeight="100.0"
                                  title="x" fx:id="xIterationsChart">
                    <xAxis>
                        <NumberAxis autoRanging="false" side="BOTTOM" tickUnit="10.0"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis autoRanging="false" lowerBound="-2.0" side="LEFT" tickUnit="0.25" upperBound="2.0"/>
                    </yAxis>
                </IterationChartBi>
                <IterationChartBi fx:id="yIterationsChart" animated="false" createSymbols="false" legendVisible="false"
                                  prefHeight="100.0" title="y" GridPane.columnIndex="1">
                    <xAxis>
                        <NumberAxis autoRanging="false" side="BOTTOM" tickUnit="10.0"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis autoRanging="false" lowerBound="-2.0" side="LEFT" tickUnit="0.5" upperBound="2.0"/>
                    </yAxis>
                </IterationChartBi>
            </children>
        </GridPane>
    </bottom>
</BorderPane>
