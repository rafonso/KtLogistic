<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import rafael.logistic.map.fx.mapchart.MapChartBi?>
<?import rafael.logistic.map.fx.iterationchart.IterationChartBi?>
<BorderPane prefHeight="589.0" prefWidth="1220.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" valignment="BASELINE" vgrow="ALWAYS"/>
            </rowConstraints>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="0">
                <Label fx:id="lblA" styleClass="title" text="α ="/>
                <Spinner fx:id="spnA" styleClass="spnDouble" />
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="1">
                <Label fx:id="lblX0" styleClass="title" text="x₀ ="/>
                <Spinner fx:id="spnX0" styleClass="spnDouble" />
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="2">
                <Label fx:id="lblY0" styleClass="title" text="y₀ ="/>
                <Spinner fx:id="spnY0" styleClass="spnDouble" />
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="3">
                <Label fx:id="lblIterations" styleClass="title" text="Iterations ="/>
                <Spinner fx:id="spnIterations" styleClass="spnIterations" />
            </FlowPane>
        </GridPane>
    </top>
    <center>
        <FlowPane alignment="CENTER" BorderPane.alignment="CENTER">
            <MapChartBi fx:id="chart" animated="false" createSymbols="false" legendVisible="false">
                <xAxis>
                    <NumberAxis autoRanging="false" minorTickCount="2" side="BOTTOM" tickUnit="0.1"
                                upperBound="1.0"/>
                </xAxis>
                <yAxis>
                    <NumberAxis autoRanging="false" lowerBound="-2.0" minorTickCount="10" side="LEFT" tickUnit="0.1"
                                upperBound="2.0"/>
                </yAxis>
            </MapChartBi>
        </FlowPane>
    </center>
    <bottom>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <IterationChartBi animated="false" createSymbols="false" legendVisible="false" prefHeight="100.0"
                              fx:id="xIterationsChart">
                <xAxis>
                    <NumberAxis autoRanging="false" side="BOTTOM" tickUnit="10.0"/>
                </xAxis>
                <yAxis>
                    <NumberAxis autoRanging="false" minorTickCount="0" side="LEFT" tickUnit="0.1" upperBound="1.0"/>
                </yAxis>
            </IterationChartBi>
            <IterationChartBi fx:id="yIterationsChart" animated="false" createSymbols="false" legendVisible="false"
                              prefHeight="100.0" GridPane.columnIndex="1">
                <xAxis>
                    <NumberAxis autoRanging="false" side="BOTTOM" tickUnit="10.0"/>
                </xAxis>
                <yAxis>
                    <NumberAxis autoRanging="false" lowerBound="-2.0" minorTickCount="0" side="LEFT" tickUnit="0.5"
                                upperBound="2.0"/>
                </yAxis>
            </IterationChartBi>
        </GridPane>
    </bottom>
</BorderPane>
