<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import rafael.logistic.core.fx.mapchart.MouseRealPosNode?>
<?import rafael.logistic.maps.bifurcation.BifurcationCanvas?>

<BorderPane prefHeight="589.0" prefWidth="918.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <GridPane vgap="5.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" valignment="BASELINE" vgrow="ALWAYS"/>
                <RowConstraints minHeight="10.0" valignment="BASELINE" vgrow="ALWAYS"/>
            </rowConstraints>
            <children>
                <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="0">
                    <children>
                        <Label fx:id="lblX0" styleClass="title" text="x₀ =">
                            <padding>
                                <Insets left="5.0"/>
                            </padding>
                        </Label>
                        <Spinner fx:id="spnX0"/>
                    </children>
                </FlowPane>
                <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="1">
                    <children>
                        <Label fx:id="lblX1" styleClass="title" text="x₁ =">
                            <padding>
                                <Insets left="5.0"/>
                            </padding>
                        </Label>
                        <Spinner fx:id="spnX1"/>
                    </children>
                </FlowPane>
                <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="2">
                    <children>
                        <Label fx:id="lblBeta" styleClass="title" text="β =">
                            <padding>
                                <Insets left="5.0"/>
                            </padding>
                        </Label>
                        <Spinner fx:id="spnBeta"/>
                    </children>
                </FlowPane>
                <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="3">
                    <children>
                        <Label fx:id="lblIterations" alignment="TOP_RIGHT" minWidth="75.0" text="Iterations / α ="
                               textAlignment="RIGHT">
                            <padding>
                                <Insets right="5.0"/>
                            </padding>
                        </Label>
                        <Spinner fx:id="spnIterations" prefWidth="100.0"/>
                    </children>
                </FlowPane>
                <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <children>
                        <Label fx:id="lblAlphaMin" styleClass="title" text=" α Min =">
                            <padding>
                                <Insets left="5.0"/>
                            </padding>
                        </Label>
                        <Spinner fx:id="spnAlphaMin"/>
                    </children>
                </FlowPane>
                <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <Label fx:id="lblAlphaMax" styleClass="title" text=" α Max =">
                            <padding>
                                <Insets left="5.0"/>
                            </padding>
                        </Label>
                        <Spinner fx:id="spnAlphaMax"/>
                    </children>
                </FlowPane>
                <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <children>
                        <Label fx:id="lblSkip" styleClass="title" text="Skip First =">
                            <padding>
                                <Insets right="5.0"/>
                            </padding>
                        </Label>
                        <Spinner fx:id="spnSkip" prefWidth="60.0"/>
                    </children>
                </FlowPane>
                <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="3" GridPane.rowIndex="1">
                    <children>
                        <Label fx:id="lblPixelsSeparation" styleClass="title" text="Pixels Separation =">
                            <padding>
                                <Insets right="5.0"/>
                            </padding>
                        </Label>
                        <Spinner fx:id="spnPixelsSeparation" prefWidth="60.0"/>
                    </children>
                </FlowPane>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </GridPane>
    </top>
    <center>
        <FlowPane alignment="CENTER" columnHalignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <BifurcationCanvas fx:id="chart" height="200.0" width="200.0"/>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </FlowPane>
    </center>
    <bottom>
        <FlowPane hgap="5.0" style="-fx-border-width: 1px; -fx-border-style: dashed;" vgap="5.0"
                  BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
            <children>
                <MouseRealPosNode fx:id="lblPosMouse"/>
                <Label fx:id="lblStatus" prefWidth="200.0" text="XXXXXXXX"/>
            </children>
        </FlowPane>
    </bottom>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</BorderPane>
