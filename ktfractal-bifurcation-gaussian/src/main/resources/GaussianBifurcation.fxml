<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import rafael.logistic.core.fx.mapchart.MouseRealPosNode?>
<?import rafael.logistic.map.bifurcation.BifurcationCanvas?>

<BorderPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <GridPane vgap="5.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" valignment="BASELINE" vgrow="ALWAYS"/>
                <RowConstraints minHeight="10.0" valignment="BASELINE" vgrow="ALWAYS"/>
            </rowConstraints>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="0">
                <Label fx:id="lblX0" styleClass="title" text="x₀ =">
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </Label>
                <Spinner fx:id="spnX0" prefWidth="120.0"/>
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="1">
                <Label fx:id="lblAlpha" styleClass="title" text="α =">
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </Label>
                <Spinner fx:id="spnAlpha" prefWidth="120.0"/>
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="2">
                <Label fx:id="lblIterations" alignment="TOP_RIGHT" minWidth="75.0" text="Iterations / β ="
                       textAlignment="RIGHT">
                    <padding>
                        <Insets right="5.0"/>
                    </padding>
                </Label>
                <Spinner fx:id="spnIterations" prefWidth="100.0"/>
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="3">
                <Label fx:id="lblSkip" styleClass="title" text="Skip First =">
                    <padding>
                        <Insets right="5.0"/>
                    </padding>
                </Label>
                <Spinner fx:id="spnSkip" prefWidth="60.0"/>
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="4">
                <Label fx:id="lblPixelsSeparation" styleClass="title" text="Pixels Separation =">
                    <padding>
                        <Insets right="5.0"/>
                    </padding>
                </Label>
                <Spinner fx:id="spnPixelsSeparation" prefWidth="60.0"/>
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label fx:id="lblBetaMin" styleClass="title" text="β Min =">
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </Label>
                <Spinner fx:id="spnBetaMin" prefWidth="120.0"/>
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label fx:id="lblBetaMax" styleClass="title" text="β Max =">
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </Label>
                <Spinner fx:id="spnBetaMax" prefWidth="120.0"/>
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="2" GridPane.rowIndex="1">
                <Label fx:id="lblXMin" styleClass="title" text="X Min =">
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </Label>
                <Spinner fx:id="spnXMin" prefWidth="120.0"/>
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" GridPane.columnIndex="3" GridPane.rowIndex="1">
                <Label fx:id="lblXMax" styleClass="title" text="X Max =">
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </Label>
                <Spinner fx:id="spnXMax" prefWidth="120.0"/>
            </FlowPane>
        </GridPane>
    </top>
    <center>
        <FlowPane alignment="CENTER" columnHalignment="CENTER" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <BifurcationCanvas fx:id="chart" height="200.0" width="200.0"/>
        </FlowPane>
    </center>
    <bottom>
        <FlowPane hgap="5.0" style="-fx-border-width: 1px; -fx-border-style: dashed;" vgap="5.0"
                  BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
            <MouseRealPosNode fx:id="lblPosMouse"/>
            <Label fx:id="lblStatus" prefWidth="200.0" text="XXXXXXXX"/>
        </FlowPane>
    </bottom>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</BorderPane>
